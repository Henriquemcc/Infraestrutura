${BASE_DOMAIN} {
    hosts {
        whoami gitlab.${BASE_DOMAIN}
        whoami nextcloud.${BASE_DOMAIN}
        whoami blog.${BASE_DOMAIN}
        whoami mastodon.${BASE_DOMAIN}
        whoami ia.${BASE_DOMAIN}
        whoami dns.${BASE_DOMAIN}
        whoami pihole.${BASE_DOMAIN}
    }
}

. {
    forward . 172.254.0.252 {
        tls_servername dns.${BASE_DOMAIN}
    }
}

tls://.:853 {
    tls /etc/certs/fullchain.pem /etc/certs/privkey.pem
    forward . 172.254.0.252
}